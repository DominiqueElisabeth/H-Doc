<h1>Add Note For <%= @post.patient.name %></h1>
<%= form_with(model: [@post, @comment], local: true, class: "ui form" ) do |f| %>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, required: true, placeholder: "Enter the patient results", rows: 10, autofocus: true %>
  </div>
  <%= f.submit nil, class: "ui blue button" %>
<% end %>
