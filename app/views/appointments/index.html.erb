<span class="doctor-show-header"><h1><%= @doctor.name %> Appointments</h1></span>

<%= link_to 'Add Appointment', new_doctor_appointment_path(@doctor), class:"ui button blue inverted" %>
<%= link_to 'Post Lists', posts_path(@post), class:"ui button blue inverted" %>

<br />
<br />
<hr />


<table class="ui celled table">
  <thead>
    <th>Name</th>
    <th>Symptoms</th>
    <th>Age</th>
    <th>Date of Birth</th>
    <th>Appointment Date</th>
    <th>Appointment Time</th>
    <th>Remove</th>
  </thead>
  <tbody>
    <% @appointments.each do |appt| %>
      <tr>
        <td><%= link_to appt.post.patient.name, class: "ui basic button"%></td>
        <td><%= appt.post.symptom %></td>
        <td><%= appt.post.age %></td>
        <td><%= appt.post.dob %></td>
        <td><%= appt.date.strftime('%a, %b %d, %Y') %></td>
        <td><%= appt.time.strftime("%l:%M %p")  %></td>
        <td><%= button_to 'Cancel', doctor_appointment_path(appt.doctor_id, appt.id), method: :delete, class:"ui button red inverted" %></td>
      </tr>
    <% end %>
  </tbody>

</table>
