<h1>New Appointment</h1>

<%= form_with(model: [@doctor, @appointment], local: true, class: "ui form" ) do |f| %>
  <%= f.label :post %>
  <%= f.select :post_id, @posts.collect { |p| [p.patient.name, p.id]} %>
  <br />
  <%= f.label :date %>
  <%= f.date_field :date %>
  <br />
  <%= f.label :time %>
  <%= f.time_field :time %>
  <br />
  <br />
  <%= f.submit nil, class: "ui green button inverted" %>
<% end %>
