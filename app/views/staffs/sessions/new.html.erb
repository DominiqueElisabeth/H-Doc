<h2><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, placeholder: "名前", autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: "パスワード", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_in') %>
  </div>
<% end %>

