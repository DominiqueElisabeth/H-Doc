<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Symptom</th>
      <th>Age</th>
      <th>Dob</th>
      <th>Weight</th>
      <th>Phone</th>
      <th>Sex</th>
      <th>Remark</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.symptom %></td>
        <td><%= post.age %></td>
        <td><%= post.dob %></td>
        <td><%= post.weight %></td>
        <td><%= post.phone %></td>
        <td><%= post.sex %></td>
        <td><%= post.remark %></td>
        
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
